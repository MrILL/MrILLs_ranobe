{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": ["esnext", "es6", "es7"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
  },
  "include": [
   "**/*.js"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}
